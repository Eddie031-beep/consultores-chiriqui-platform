<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Permitir acceso a archivos y directorios existentes
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirigir raíz a vacantes públicas
    RewriteRule ^$ public/vacantes.php [L]
    
    # Redirigir /vacantes a public/vacantes.php
    RewriteRule ^vacantes/?$ public/vacantes.php [L]
    RewriteRule ^vacantes/(.+)/?$ public/vacante-detalle.php?slug=$1 [L]
</IfModule>